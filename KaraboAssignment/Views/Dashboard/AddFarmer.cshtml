<h2 class="text-success mb-3">Add New Farmer</h2>

<form asp-action="AddFarmer" method="post" class="p-4 bg-light border rounded">
    <div class="mb-3">
        <label class="form-label fw-bold">Farmer Name</label>
        <input name="Name" class="form-control" placeholder="Enter full name" />
    </div>

    <div class="mb-3">
        <label class="form-label fw-bold">Email</label>
        <input name="Email" type="email" class="form-control" placeholder="Enter email address" />
    </div>

    <div class="mb-3">
        <label class="form-label fw-bold">Password</label>
        <input name="Password" type="password" class="form-control" placeholder="Create password" />
    </div>

    <div class="mb-3">
        <label class="form-label fw-bold">Confirm Password</label>
        <input name="ConfirmPassword" type="password" class="form-control" placeholder="Repeat password" />
    </div>

    <button type="submit" class="btn btn-success">Add Farmer</button>
</form>
